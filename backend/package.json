{
  "name": "bot-inteligente",
  "version": "1.0.0",
  "type": "module",
  "description": "🤖 Bot inteligente para WhatsApp con AI, OCR, memoria persistente y pagos automatizados.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ts-node/esm' dotenv -e .env -- ts-node --esm --transpile-only main.ts",
    "start:local": "NODE_ENV=development pnpm dev",
"build": "tsup main.ts --format esm --out-dir dist --target node20 --clean"
    "build:prod": "pnpm build",
    "start": "NODE_ENV=production node --enable-source-maps dist/main.js",
    "test": "echo \"🧪 Tests no definidos aún\" && exit 0",
    "lint": "tsc --noEmit && eslint .",
    "lint:fix": "eslint . --fix",
    "check:env": "test -f .env || (echo '❌ Falta .env' && exit 1)"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "openai",
    "ocr",
    "mongo",
    "baileys",
    "inteligencia-artificial",
    "nodejs"
  ],
  "author": "JCAVALIER",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.6.12"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@bot-whatsapp/bot": "^0.1.38",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "diacritics": "^1.3.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "form-data": "^4.0.3",
    "fuzzysort": "^3.1.0",
    "get-stream": "^9.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.1",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.1",
    "openai": "^5.0.2",
    "pdfkit": "^0.17.1",
    "pino": "^9.7.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.32",
    "@types/pdfkit": "^0.14.0",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
